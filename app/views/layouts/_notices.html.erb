<% if notice %>
  <div class="col alert alert-success text-center alert-floating" role="alert" data-fade="4000">
    <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
    <%= notice %>
  </div>
<% end %>
<% if alert %>
  <div class="col alert alert-danger text-center alert-floating" role="alert" data-fade="4000">
    <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
    <%= alert %>
  </div>
<% end %>

