#map {
  height: 100%;
  min-height: 500px;
  width: 100%;
}

.row.border {
  margin-top: 1rem;
  padding-top: .75rem;
  padding-bottom: .75rem;
}

.navbar-dark .navbar-brand, .navbar-dark .navbar-brand:hover, .navbar-dark .navbar-brand:active, .brand {
  color:#ffd147;
  font-variant: small-caps ;
}

.navbar-dark .navbar-brand img, .card .card-header img {
  height: 1.5em;
}

.navbar-dark a.navbar-brand ::first-letter, .brand::first-letter {
  color: #ff9209;
}

.nav-item {
  line-height: 2em;
}

.nav-item.active .nav-link {
  text-transform: uppercase;
}

#localeSelectionMenu,  #localeSelection{
  min-width: 4rem;
  text-transform: uppercase;
}

.icon {
  height: 1rem;
  width: 1rem;
  fill: currentColor;
}

.nav-link .icon {
  height: 1.5em;
  width: 1.5em;
}

header.masthead {
  padding-top: 100px;
  padding-bottom: 50px;
  text-align: center;
  color: white;
}
header.masthead img {
  display: block;
  margin: 0 auto 20px;
}

header.masthead .intro-text .name {
  color:#ffd147;
  font-size: 2rem;
  font-weight: 500;
  display: block;
  font-variant: small-caps ;
}

header.masthead .intro-text .name::first-letter {
  color: #ff9209;
}

header.masthead .intro-text .name .badge{
  font-size: .75rem;
  vertical-align: super;
}

@media (min-width: 768px) {
  header.masthead {
    padding-top: 200px;
    padding-bottom: 100px;
  }
  header.masthead .intro-text .name {
    font-size: 4rem;
  }
}

#pictureInput {
  display: none;
}

.card-img-overlay.map-overlay{
  padding: 0;
  width: 33%;
}
.card-img-overlay.map-overlay img {
  border-bottom-right-radius: calc(0.25rem - 1px);
}

.card-columns{
  padding-top: 0.75rem;
}

.card-subtitle, .card-footer {
  color: rgba(255, 255, 255, 0.75);
}

html {
  height: 90%;
}

.fill {
  min-height: 100%;
  height: 100%;
}

#life-tree {
  overflow-y: auto;
  padding-top: 1rem;
  padding-left: 0;
}

#life-tree ul {
  list-style-type: none;
  padding-left: 1rem;
}

#life-tree .node .icon{
  margin-right: .25rem;
}

#life-tree .node.open > svg.icon use:first-child{
  display:none;
}

#life-tree .node.closed > svg.icon use:last-child{
  display:none;
}

#life-tree div.pretty-check {
  width: 1rem;
  height: 1rem;
  border: 1px solid;
  margin-right: .25rem;
  margin-bottom: 0;
  padding: 0;
  display: inline-block;
  border-radius: 20%;
  box-shadow: 1px 1px #CCCCCC;
  cursor: pointer;
}

#life-tree div.pretty-check.disabled {
  background-color: #CCCCCC;
  box-shadow: none;
  cursor: not-allowed;
}

#life-tree div.pretty-check > div {
  width: 0.8rem;
  height: 0.8rem;
  margin: calc(.1rem - 1px);
  padding: 0;
  border-radius: 20%;
}

#life-tree .node.loading > div.pretty-check > div:after {
  background-image: url(<%=image_path 'loading.svg'%>);
  content: "";
  display: block;
  width: 100%;
  height: 100%;
  background-size: 100% 100%;
}

#map-info-window .info-body{
  width: 17rem;
}

.about .card-header {
  font-size: 1.25rem;
}

.standalone.card .card-header {
  font-size: 2rem;
}

.sep {
  width: 1em;
}

.sep:after{
  content: "|";
}

.sep:last-child{
  display: none;
}